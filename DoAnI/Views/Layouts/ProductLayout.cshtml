<!DOCTYPE html>
<html>
<head>
    <title>Smart Store Website</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/menu.css" rel="stylesheet" type="text/css" media="all" />
    <link href='//fonts.googleapis.com/css?family=Doppio+One' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/script.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/move-top.js"></script>
    <script type="text/javascript" src="~/Content/js/easing.js"></script>
    <script src="~/Content/js/script.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Areas/admin/Content/js/notify.min.js"></script>

    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="wrap">       
        <div id="KQTimKiem">
            <div class="header">
                <div class="header_top">
                    <div class="logo">
                        <a href="index.html"><img src="~/Content/images/logo.png" alt="" /></a>
                    </div>
                    <div class="header_top_right">
                        @Html.Partial("~/Views/Layouts/LoginPartial.cshtml")

                        <div class="shopping_cart" id="divGioHang">
                            @Html.Action("GioHangPartial", "GioHang")
                        </div>
                        <div class="search_box">
                            @using (Ajax.BeginForm("KQTimKiemPartial", "TimKiem", new AjaxOptions { @UpdateTargetId = "KQTimKiem", @InsertionMode = InsertionMode.Replace }))
                            {
                                <input type="text" name="sTuKhoa" value="nhập từ khóa cần tìm" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'nhập từ khóa cần tìm'; }">
                                <input type="submit" value="TÌM KIẾM">
                            }
                        </div>


                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                @Html.Action("MenuPartial", "Home")
            </div>
            <div class="main">
                <div class="content">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="wrapper">
                <div class="section group">
                    <div class="col_1_of_4 span_1_of_4">
                        <h4>Thông tin</h4>
                        <ul>
                            <li><a href="#"><span>Vị trí</span></a></li>
                            <li><a href="#">Thời gian hoạt động</a></li>
                            <li><a href="#"><span>Liên lạc</span></a></li>
                        </ul>
                    </div>
                    <div class="col_1_of_4 span_1_of_4">
                        <h4>Về chúng tôi</h4>
                        <ul>
                            <li><a href="#">Giới thiệu</a></li>
                            <li><a href="#">Dịch vụ</a></li>
                        </ul>
                    </div>
                    <div class="col_1_of_4 span_1_of_4">
                        <h4>Tài khoản</h4>
                        <ul>
                            <li><a href="@Url.Action("XemGioHang","GioHang")">Xem giỏ hàng</a></li>
                            <li><a href="#">Theo dõi đơn hàng</a></li>
                            <li><a href="#">Trợ giúp</a></li>
                        </ul>
                    </div>
                    <div class="col_1_of_4 span_1_of_4">
                        <h4>Liên hệ</h4>
                        <ul>
                            <li><span>+91-123-456789</span></li>
                            <li><span>+00-123-000000</span></li>

                        </ul>
                        <div class="social-icons">
                            <ul>
                                <li class="facebook"><a href="https://www.facebook.com/blogdieucay/" target="_blank"> </a></li>
                                <li class="twitter"><a href="#" target="_blank"> </a></li>
                                <li class="googleplus"><a href="#" target="_blank"> </a></li>
                                <li class="contact"><a href="#" target="_blank"> </a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
                @*<div class="copy_right">
                    <p>&copy; 2013 Smart Store. All Rights Reserved | Design by <a href="http://w3layouts.com">W3Layouts</a> </p>
                </div>*@
            </div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                /*
                var defaults = {
                    containerID: 'toTop', // fading element id
                    containerHoverID: 'toTopHover', // fading element hover id
                    scrollSpeed: 1200,
                    easingType: 'linear'
                };
                */

                $().UItoTop({ easingType: 'easeOutQuart' });

            });
        </script>
        <a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>
    </div>
</body>
</html>
