@using DoAnI.Models;
@model Quyen

@{
    ViewBag.Title = "ThemQuyen";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Thêm Quyền</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <span class="control-label col-md-2">Mã Quyền</span>
        <input type="text" class="col-md-3 " name="MaQuyen" />
    </div>
    <div class="clearfix"></div>
    <div class="form-group">
        <span class="control-label col-md-2">Tên Quyền</span>
        <input type="text" class="col-md-3" name="TenQuyen" style="border-radius:2px" />
    </div>
    <div class="clearfix"></div>
    <input type="submit" value="Thêm" class="btn btn-primary" />
}

