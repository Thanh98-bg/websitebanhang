@using DoAnI.Models;
@model NhaSanXuat
@{
    ViewBag.Title = "SuaNSX";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Sửa nhà sản xuất</h2>
@using (Html.BeginForm())
{
    @Html.Hidden("MaNSX", Model.MaNSX)
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2">Tên nhà sản xuất:</span>
            @Html.TextBoxFor(n => n.TenNSX)
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Thông tin:</span>
            @Html.TextAreaFor(n => n.ThongTin)
        </div>
    </div>
    <input type="submit" class="btn btn-warning" value="Lưu" />
    <a href="@Url.Action("Index")" class="btn btn-primary">Thoát</a>
}



