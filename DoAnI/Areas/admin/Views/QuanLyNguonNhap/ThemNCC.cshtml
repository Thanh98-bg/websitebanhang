
@{
    ViewBag.Title = "ThemNCC";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<h2 style="color:#00ffff">Thêm nhà cung cấp</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2">Tên NCC</span>
            @Html.TextBox("TenNCC")
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Địa chỉ</span>
            @Html.TextArea("DiaChi")
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Số Điện Thoại</span>
            @Html.TextBox("SoDienThoai")
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Email</span>
            @Html.TextBox("Email")
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Fax</span>
            @Html.TextBox("Fax")
        </div>
    </div>
    <input type="submit" class="btn btn-warning" value="Thêm" />
    <a href="@Url.Action("Index")" class="btn btn-primary">Trở lại</a>
}


